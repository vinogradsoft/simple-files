{
  "name": "vinogradsoft/simple-files",
  "description": "Working with files.",
  "license": "MIT",
  "authors": [
    {
      "name": "vinograd",
      "email": "cmk.cmyk@mail.ru"
    }
  ],
  "version": "2.0.0",
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Vinograd\\SimpleFiles\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.0",
    "vinogradsoft/supports": "^2.0",
    "vinogradsoft/io-contract": "^1.0",
    "vinogradsoft/compass": "^1.1",
    "ext-yaml": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "overtrue/phplint": "^2.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "scripts": {
    "lint": "phplint",
    "tests": "php ./vendor/bin/phpunit --colors=always tests",
    "coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html tests/coverage"
  }
}
